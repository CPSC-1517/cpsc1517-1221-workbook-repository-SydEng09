@page
@model WestwindWebApp.Pages.FormControlDemoUsingTagHelpersModel
@{
}
<div class="alert-info">
    @Model.FeedbackMessage
</div>
<form method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input type="text" class="form-control" placeholder="Enter your name" asp-for="Username" />
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input type="number" min="18" max="65" class="form-control" asp-for="Age" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" value="Male" asp-for="Gender" >
        <label class="form-check-label" asp-for="Gender">
            Male
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" value="Female" asp-for="Gender" >
        <label class="form-check-label" asp-for="Gender">
            Female
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" value="Unspecified" asp-for="Gender">
        <label class="form-check-label" asp-for="Gender">
            Unspecified
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>